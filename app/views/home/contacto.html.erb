<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
    	<h3 class="panel-title text-center"><%= @title %></h3>
    </div>
    <div class="panel-body">
      <%= form_tag({:controller => "home", :action => "contacto"}, :method=>"post", :class=>"form-inline", :role=>"form") do %>
         <p><%= text_field_tag "nombre", nil, :size=>30, :autofocus=>true, :required=>"required", :class=>"form-control", :placeholder=>"Nombre y apellidos" %></p>
         <p><%= email_field_tag "correo", nil, :size=>30, :required=>"required", :class=>"form-control", :placeholder=>"Correo electrÃ³nico" %></p>
         <div class="form-group"><%= text_area_tag "comentario", nil, :cols=>27, :required => "required", :class=>"form-control", :placeholder=>"Comentarios" %></div><br><br>
         <button type="submit" class="btn btn-primary">Enviar</button><br><br>
      <% end %>

      <% if @comentario %>
         <p class="text-primary"><strong><%= @comentario[:nombre] %></strong>, gracias por enviar tus comentarios.</p>
         <!--<div class="comentario">
            <%= simple_format (@comentario[:consulta]) %>
         </div>-->
      <% end %>
  	</div>
  </div>
</div>