<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @categoria.descripcion %></h3>
  </div>
  <div class="panel-body">
    <% i = 1 %>
    <div class="row">
      <% @libros.sort_by{|x| x.fechapub}.reverse.each_with_index do |libro,index| %>
        <% if (libro.titulo.categoria == @categoria) && (libro.publico) %>
          <% if (i <= 6) %>
            <div class="col-sm-6 col-md-2">
              <div class="thumbnail">
                <%= link_to image_tag("portadas/"+libro.portada, :class=>"img-responsive"), home_libro_path(:id => libro.titulo) %>
                <div class="caption">
                  <h5 class="media-heading">
                    <%= link_to libro.titulo, home_libro_path(:id => libro.titulo) %>
                  </h5>
                  <h6 class="media-heading">
                    <% libro.titulo.autor.each do |aut| %>
                      <%= link_to aut, home_autor_path(:id => aut) %><% if !(aut == libro.titulo.autor.last) %>,<br><% end %>
                    <% end %>
                  </h6>
                </div>
              </div>
            </div>
          <% elsif (index < @libros.size) %>         
            </div>
            <div class="row">
            <% i = 1 %>
            <div class="col-sm-6 col-md-2">
              <div class="thumbnail">
                <%= link_to image_tag("portadas/"+libro.portada, :class=>"img-responsive"), home_libro_path(:id => libro.titulo) %>
                <div class="caption">
                  <h5 class="media-heading">
                    <%= link_to libro.titulo, home_libro_path(:id => libro.titulo) %>
                  </h5>
                  <h6 class="media-heading">
                    <% libro.titulo.autor.each do |aut| %>
                      <%= link_to aut, home_autor_path(:id => aut) %>
                      <% if !(aut == libro.titulo.autor.last) %>,<br><% end %>
                    <% end %>
                  </h6>
                </div>
              </div>         
            </div>         
          <% end %>
          <% i += 1 %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>