<h1>Listing libros</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Editor</th>
      <th>Paginas</th>
      <th>Edicion</th>
      <th>Fechapub</th>
      <th>Pais</th>
      <th>Idioma</th>
      <th>Formato</th>
      <th>Isbn10</th>
      <th>Isbn13</th>
      <th>Ean</th>
      <th>Peso</th>
      <th>Medidas</th>
      <th>Portada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.titulo_id %></td>
        <td><%= libro.editor_id %></td>
        <td><%= libro.paginas %></td>
        <td><%= libro.edicion %></td>
        <td><%= libro.fechapub %></td>
        <td><%= libro.pais_id %></td>
        <td><%= libro.idioma_id %></td>
        <td><%= libro.formato_id %></td>
        <td><%= libro.isbn10 %></td>
        <td><%= libro.isbn13 %></td>
        <td><%= libro.ean %></td>
        <td><%= libro.peso %></td>
        <td><%= libro.medidas %></td>
        <td><%= libro.portada %></td>
        <td><%= link_to 'Show', libro %></td>
        <td><%= link_to 'Edit', edit_libro_path(libro) %></td>
        <td><%= link_to 'Destroy', libro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Libro', new_libro_path %>
